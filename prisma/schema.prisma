generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Route {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  href  String
  group String
  label String
}

model User {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  active       Boolean      @default(false)
  passwordHash String
  profile      UserProfile?
  username     String       @unique
}

model UserProfile {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  dateOfHire          DateTime?
  dateHired           DateTime?
  employeeNumber      Int?
  emailSignatureTitle String?
  ennisId             Int?
  extension           Int?
  firstName           String?
  lastName            String?
  user                User      @relation(fields: [userId], references: [id])
  userId              String    @unique @db.ObjectId
}
